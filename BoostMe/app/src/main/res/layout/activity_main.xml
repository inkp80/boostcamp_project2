<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/event_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <fragment
            android:id="@+id/main_event_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.inkp.boostcamp.Boostme.MainEventFragment"
            tools:layout="@layout/activity_main"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <fragment
            android:id="@+id/main_calendar_fragment"
            android:name="com.inkp.boostcamp.Boostme.MainCalendarFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/activity_main"/>
    </LinearLayout>
</FrameLayout>
